<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/main_background"
    android:gravity="center"
    tools:context="com.museop.termproject.MainActivity">


    <ImageView
        android:layout_marginBottom="30dp"
        android:src="@drawable/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:onClick="onClick"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/go_noticeboard_list"
        android:background="@drawable/selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_event_note_black_24dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="통합 게시판"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:onClick="onClick"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/go_computer_room"
        android:background="@drawable/selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_desktop_windows_black_24dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="컴퓨터실습실 사용 현황"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:onClick="onClick"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/go_community"
        android:background="@drawable/selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_person_black_24dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="커뮤니티 게시판"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:onClick="onClick"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/go_setting"
        android:background="@drawable/selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_notifications_active_black_24dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="알림 설정"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:onClick="onClick"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/go_app_info"
        android:background="@drawable/selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_info_black_24dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="앱 정보"
            android:textStyle="bold" />
    </LinearLayout>




</LinearLayout>
